{
    /**
     * Minimal Code
     */
    "apc.electron": {
        // Hide the title bar in the Electron app
        // "titleBarStyle": "hidden",
    },
    "apc.stylesheet": {
        // Hide the decorations overview ruler
        ".decorationsOverviewRuler": "display: none;",
        // Hide the title elements in the editor group container
        ".editor-group-container .title *": "display: none;",
        // Make the title elements in the editor group container non-clickable
        ".editor-group-container .title": "pointer-events: none;",
        // Allow dragging the empty editor group container
        ".editor-group-container.empty": "-webkit-app-region: drag;",
        // Remove the box shadow from the scroll decoration in the Monaco editor
        ".monaco-editor .scroll-decoration": "box-shadow: none;",
        // Set the color for the cursor in the Monaco editor 
        ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(135deg, #67D0FF 10%, #C45DFF 100%)",
        // Set the color for the selection in the Monaco editor
        // ".monaco-editor .focused .selected-text": "background-color: #67D0FF;",
        // Set the color for the selection border in the Monaco editor
        // ".monaco-editor .selection": "border: 1px solid #67D0FF;",
        // Set the color for glyph margin in the Monaco editor
        // ".monaco-editor .glyph-margin": "border: 10px solid #67D0FF;",
        // ".monaco-editor .line-numbers": "background-image: linear-gradient(135deg, #67D0FF 10%, #C45DFF 100%)",
        // Hypothetical rule for highlighting the active line number background
    },
    // Set the font family for the debug console to JetBrains Mono
    "debug.console.fontFamily": "JetBrains Mono",
    // Set the font size for the debug console to 15
    "debug.console.fontSize": 16,
    // Set the line height for the debug console to 36
    "debug.console.lineHeight": 36,
    // Dock the debug tool bar
    "debug.toolBarLocation": "docked",
    // Don't ignore trim whitespace in the diff editor
    "diffEditor.ignoreTrimWhitespace": false,
    // Render the diff editor in a side-by-side layout
    "diffEditor.renderSideBySide": false,
    // Disable bracket pair colorization in the editor
    "editor.bracketPairColorization.enabled": false,
    // Disable color decorators in the editor
    "editor.colorDecorators": false,
    // Set the cursor style to a thin line
    "editor.cursorStyle": "line",
    // Set the cursor blinking style
    "editor.cursorBlinking": "phase",
    // Controls whether the smooth caret animation should be enabled.
    "editor.cursorSmoothCaretAnimation": "on",
    // Set the font family for the editor to JetBrains Mono
    "editor.fontFamily": "JetBrains Mono",
    // Enable font ligatures in the editor
    "editor.fontLigatures": true,
    // Set the font size for the editor to 15
    "editor.fontSize": 17,
    // Format the code on save
    "editor.formatOnSave": true,
    // format lenth of the line'
    // "editor.rulers": [
    //     180,
    //     120
    // ],
    // Disable the glyph margin in the editor -- shows/hides breakpoints
    "editor.glyphMargin": false,
    //Disable code folding in the editor
    "editor.folding": true,
    // Set the behavior for multiple declarations, definitions, implementations, references, and type definitions to "goto"
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    // Disable indentation guides in the editor
    "editor.guides.indentation": false,
    // Hide the cursor in the overview ruler
    "editor.hideCursorInOverviewRuler": true,
    // Set the line height for the editor to 36
    "editor.lineHeight": 32,
    // Disable line numbers in the editor
    // "editor.lineNumbers": "off",
    // Set the match brackets behavior to "near"
    "editor.matchBrackets": "near",
    // Disable the minimap in the editor
    "editor.minimap.enabled": false,
    // Disable occurrences highlighting in the editor
    "editor.occurrencesHighlight": "off",
    // Disable line highlighting in the editor
    "editor.renderLineHighlight": "line",
    // Disable whitespace rendering in the editor
    "editor.renderWhitespace": "none",
    // Set the horizontal scrollbar size to 8
    "editor.scrollbar.horizontalScrollbarSize": 8,
    // Set the vertical scrollbar size to 8
    "editor.scrollbar.verticalScrollbarSize": 8,
    // Disable compact folders in the explorer
    "explorer.compactFolders": false,
    // Disable decorations badges in the explorer
    "explorer.decorations.badges": false,
    // Hide open editors in the explorer
    "explorer.openEditors.visible": 9,
    // Enable smart commit in Git
    "git.enableSmartCommit": true,
    // Disable confirm sync in Git
    "git.confirmSync": false,
    // Disable mark editor selection in Markdown preview
    "markdown.preview.markEditorSelection": false,
    // Disable problems decorations
    "problems.decorations.enabled": false,
    // Disable diff decorations in SCM
    "scm.diffDecorations": "none",
    // Set the cursor style in the terminal to a line
    "terminal.integrated.cursorStyle": "line",
    // Disable multi-line paste warning in the terminal
    "terminal.integrated.enableMultiLinePasteWarning": "auto",
    // Set the font size for the terminal to 15
    "terminal.integrated.fontSize": 15,
    // Set the line height for the terminal to 1.85
    "terminal.integrated.lineHeight": 1.2,
    // Auto-detect the color scheme for the window
    "window.autoDetectColorScheme": true,
    // Inherit the new window dimensions
    "window.newWindowDimensions": "inherit",
    // Set the window title to the root name
    "window.title": " ",
    // Set the window title bar style to native
    "window.titleBarStyle": "custom",
    // Set the color theme to GitHub Light Default
    "workbench.colorTheme": "Default Dark+",
    // Disable editor preview
    "workbench.editor.enablePreview": false,
    // Reveal the editor if it's open
    "workbench.editor.revealIfOpen": true,
    // Disable showing tabs in the editor
    // "workbench.editor.showTabs": "single",
    // Set the icon theme to null
    "workbench.iconTheme": "symbols",
    // Enable horizontal scrolling in the list
    "workbench.list.horizontalScrolling": true,
    // Set the preferred light color theme to GitHub Light Default
    "workbench.preferredLightColorTheme": "GitHub Light Default",
    // Set the startup editor to none
    "workbench.startupEditor": "none",
    // Disable tips
    "workbench.tips.enabled": false,
    // Set the tree indent to 16
    "workbench.tree.indent": 16,
    // Disable render indent guides in the tree
    "workbench.tree.renderIndentGuides": "onHover",
    // Disable the command palette
    "window.commandCenter": false,
    // Disable the layout control
    "workbench.layoutControl.enabled": false,
    // Toggle the menu bar visibility
    "window.menuBarVisibility": "toggle",
    // Hide the explorer arrows
    "symbols.hidesExplorerArrows": true,
    // Move the editor actions to the title bar
    "workbench.editor.editorActionsLocation": "titleBar",
    // Move the activity bar to the top
    "workbench.activityBar.location": "top",
    // Set the editor backgrounds
    "background.editorBackgrounds": [
        "c:/Users/shubhsou/Downloads/peakpxa.jpg"
    ],
    // Set the background blur
    "background.backgroundBlur": [
        "0",
        "5px",
        "0",
        "0"
    ],
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "java": false
    },
    "workbench.productIconTheme": "el-vsc-v1-icons",
    "http.proxySupport": "on",
    "workbench.preferredDarkColorTheme": "Night Owl",
    // "http.proxy": "http://genproxy.amdocs.com:8080",
    "editor.stickyScroll.enabled": false,
    "workbench.statusBar.visible": false,
}